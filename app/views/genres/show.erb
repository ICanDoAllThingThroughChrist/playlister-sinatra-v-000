<!--* Any given genre's show page should have links to each of its artists and songs.-->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>a Genre's artists and songs</title>
  </head>
  <body>
    <h2><%=@genre.name%></h2>
    <h3>Songs</h3>
    <%@genre.songs.each do |song|%>
      <!-- binding.pry-->
      <a href="/songs/<%=song.slug%>">
      <%song.name%> 
      </a> 
    <% end %>
    <h3>Artists</h3>
    <%@genre.artists.each do |artist|%>
      <!--% binding.pry -->
      <a href="/artists/<%=artist.slug%>">
      <%artist.name%> 
      </a> 
    <% end %>
  </body>
</html>
